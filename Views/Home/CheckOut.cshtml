@model ShoppingCart

<section class="shopping-cart" style="margin-top:20px;">
    <h2>Your Shopping Cart</h2>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Product</th>
                <th>Unit Price</th>
                <th>Qty</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach(ShoppingCartItem item in Model.Items)
{
                    <tr>
                        <td>
                            <img src="/@item.Product.PictureUri"/>
                        </td>
                        <td>
                            <b>@item.Product.Name</b>
                        </td>
                        <td>
                            $@item.UnitPrice
                        </td>
                        <td>
                            @item.Qty
                        </td>
                        <td>
                            <b>$@(item.UnitPrice*item.Qty)</b>
                        </td>
                    </tr>
}
                    <tr>
                        <td colspan="3"></td>
                        <td><b>@Model.Qty</b></td>
                        <td><b>$@Model.Total</b></td>
                    </tr>
        </tbody>
    </table>
    <div style="text-align:right">
        <button class="esh-basket-checkout">[Pay Now]</button>
    </div>
</section>